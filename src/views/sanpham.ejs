<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>

<style>
    .table-container {
        padding: 15px 20px;
    }

    .title {
        font-size: 25px;
        font-weight: 600;
        padding-bottom: 10px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #ccc;
    }
</style>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/khachhang">Khách hàng</a>
        <a href="/nv">Nhân viên</a>
        <a class="active" href="/sanpham">Sản phẩm</a>
    </div>

    <div class="table-container">
        <div class="title">List User</div>
        <table>
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Tồn kho</th>
                <th>Chip</th>
                <th>Main</th>
                <th>VGA</th>
                <th>Nhà sản xuất</th>
                <th>Ram</th>
                <th>Ảnh</th>
                <th>Hành động</th>
            </tr>
            <% listSanPham.forEach(function(user, index) { %>
                <tr>
                    <td>
                        <%= user.MaSP %>
                    </td>
                    <td>
                        <%= user.TenSP %>
                    </td>
                    <td>
                        <%= user.DonGiaSP %>
                    </td>
                    <td>
                        <%= user.TonKhoSP %>
                    </td>
                    <td>
                        <%= user.Chip %>
                    </td>
                    <td>
                        <%= user.Main %>
                    </td>
                    <td>
                        <%= user.VGA %>
                    </td>
                    <td>
                        <%= user.NhanSanXuat %>
                    </td>
                    <td>
                        <%= user.RAM %>
                    </td>
                    <td>
                        <%= user.AnhSP %>
                    </td>
                    <td>
                        <a href="/update/<%= user.id %>">Edit</a>
                        <form action="/delete-user/<%= user.id %>" method="POST"><button>Delete</button></form>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>
</body>

</html>